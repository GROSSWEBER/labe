[Unit]
Description=Server for labe citation project
Documentation=https://www.github.com/slub/labe
After=network.target

[Service]
Type=simple
User=labe
WorkingDirectory=/tmp
ExecStart=/usr/local/bin/labed \
                -addr 0.0.0.0:8000 \
                -a /var/log/labe-access.log \
                -logfile /var/log/labe.log \
                -c \
                -z \
                -i /usr/share/labe/IdMappingDatabase/current \
                -o /usr/share/labe/OpenCitationsDatabase/current \
                -m /usr/share/labe/SolrDatabase/current-ai-short \
                -m /usr/share/labe/SolrDatabase/current-main-short \
                -m /usr/share/labe/SolrDatabase/current-slub-production
Restart=on-failure

[Install]
WantedBy=multi-user.target

